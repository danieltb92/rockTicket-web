---
import img1 from "../assets/images/carousel/image1.png"
import img2 from "../assets/images/carousel/image2.png"
import img3 from "../assets/images/carousel/image3.png"
import img4 from "../assets/images/carousel/image4.png"
import img5 from "../assets/images/carousel/image5.png"

const images = [
    img1, img2, img3, img4, img5

];
---


  <div class="relative overflow-hidden w-full h-[400px] max-md:h-[300px]">
    <div class="flex h-full animate-slide">
      {images.concat(images).map((image, index) => (
        <img
          src={image.src}
          alt={`Photo ${index + 1}`}
          class="h-full w-auto flex-shrink-0 object-cover"
        />
      ))}
    </div>
  </div>
  
  <style>
    @tailwind base;
    @tailwind components;
    @tailwind utilities;
  
    @layer utilities {
      @keyframes slide {
        from {
          transform: translateX(0);
        }
        to {
          transform: translateX(-100%);
        }
      }
  
      .animate-slide {
        animation: slide 20s linear infinite; /* Ajusta duración según preferencia */
        width: calc(100% * 1); /* El ancho debe cubrir todas las imágenes */
      }
    }
  </style>